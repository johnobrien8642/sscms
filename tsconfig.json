{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "@core/*": [
        "core/*"
      ],
      "@db/*": [
        "db/*"
      ],
      "@util/*": [
        "util/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".next/types/**/*.ts",
    "/home/johnobrien/personal-site/.next/types/**/*.ts",
    "lib/dbConnect.ts",
    "pages/[[...slug]].js",
    "pages/[..slug]/index.js",
    "core/components/*.tsx",
    "core/components/*.ts",
    "core/components/*.js",
    "core/components/client-templates/*.js",
    "core/components/client-templates/TextBlock.tdsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
